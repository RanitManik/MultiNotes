# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript/JavaScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Package.json and similar
[{package.json,package-lock.json,pnpm-lock.yaml}]
indent_size = 2

# Configuration files
[*.{config.js,config.ts,.eslintrc.js,.prettierrc}]
indent_size = 2

# Prisma schema
[*.prisma]
indent_size = 2

# Environment files
[*.env*]
end_of_line = lf
insert_final_newline = false

# Git files
[.gitignore]
trim_trailing_whitespace = false

# Documentation
[*.{txt,md}]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
end_of_line = lf
insert_final_newline = true

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf