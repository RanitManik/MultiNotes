{
  "name": "web",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "postinstall": "prisma generate --schema=./prisma/schema.prisma || echo 'Prisma generate failed, will try during build'",
    "dev": "next dev --turbopack",
    "build": "prisma generate --schema=./prisma/schema.prisma && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:setup": "prisma migrate deploy && tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@getbrevo/brevo": "^3.0.1",
    "@prisma/client": "^5.22.0",
    "@tanstack/react-query": "^5.90.2",
    "@tiptap/extension-blockquote": "^2.26.2",
    "@tiptap/extension-bullet-list": "^2.26.2",
    "@tiptap/extension-code-block": "^2.26.2",
    "@tiptap/extension-heading": "^2.26.2",
    "@tiptap/extension-highlight": "^3.6.1",
    "@tiptap/extension-history": "^3.6.1",
    "@tiptap/extension-link": "^3.6.1",
    "@tiptap/extension-ordered-list": "^2.26.2",
    "@tiptap/extension-placeholder": "^2.26.2",
    "@tiptap/extension-subscript": "^3.6.1",
    "@tiptap/extension-superscript": "^3.6.1",
    "@tiptap/extension-task-item": "^3.6.1",
    "@tiptap/extension-task-list": "^3.6.1",
    "@tiptap/extension-text-align": "^3.6.1",
    "@tiptap/extension-underline": "^3.6.1",
    "@tiptap/react": "^2.26.2",
    "@tiptap/starter-kit": "^2.26.1",
    "@workspace/ui": "workspace:*",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.475.0",
    "menus": "link:@tiptap/react/menus",
    "next": "^15.5.4",
    "next-auth": "5.0.0-beta.29",
    "next-themes": "^0.4.6",
    "prisma": "^5.22.0",
    "react": "^19.1.1",
    "react-confetti": "^6.4.0",
    "react-dom": "^19.1.1",
    "sonner": "^2.0.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.17",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "@types/supertest": "^6.0.3",
    "@workspace/eslint-config": "workspace:^",
    "@workspace/typescript-config": "workspace:*",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "next-test-api-route-handler": "^4.0.16",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
