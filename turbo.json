{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "DATABASE_URL",
    "DIRECT_URL",
    "JWT_SECRET",
    "NODE_ENV",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "BREVO_API_KEY",
    "BREVO_FROM_EMAIL",
    "BREVO_FROM_NAME"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["db:generate", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "prisma/**"],
      "outputs": [".next/**", "!.next/cache/**", "node_modules/.prisma/**"]
    },
    "db:generate": {
      "cache": false,
      "inputs": ["prisma/schema.prisma"],
      "outputs": ["node_modules/.prisma/**"]
    },
    "db:migrate": {
      "cache": false,
      "inputs": ["prisma/migrations/**"]
    },
    "db:migrate:prod": {
      "cache": false,
      "inputs": ["prisma/migrations/**"]
    },
    "db:seed": {
      "cache": false,
      "inputs": ["prisma/seed.ts"]
    },
    "db:setup": {
      "dependsOn": ["db:migrate:prod", "db:seed"]
    },
    "db:studio": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["**/__tests__/**", "**/*.test.*", "**/*.spec.*"]
    },
    "test:unit": {
      "dependsOn": ["^test:unit"],
      "inputs": ["**/__tests__/**", "**/*.test.*", "**/*.spec.*"]
    },
    "test:integration": {
      "dependsOn": ["^test:integration"],
      "inputs": ["**/integration/**", "**/*.test.*", "**/*.spec.*"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
