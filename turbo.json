{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["DATABASE_URL", "DIRECT_URL", "NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["db:generate", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "prisma/**"],
      "outputs": [".next/**", "!.next/cache/**", "node_modules/.prisma/**"]
    },
    "db:generate": {
      "cache": false,
      "inputs": ["prisma/schema.prisma"],
      "outputs": ["node_modules/.prisma/**"]
    },
    "db:migrate": {
      "cache": false,
      "inputs": ["prisma/migrations/**"]
    },
    "db:migrate:prod": {
      "cache": false,
      "inputs": ["prisma/migrations/**"]
    },
    "db:seed": {
      "cache": false,
      "inputs": ["prisma/seed.ts"]
    },
    "db:setup": {
      "dependsOn": ["db:migrate:prod", "db:seed"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["**/__tests__/**", "**/*.test.*", "**/*.spec.*"]
    },
    "test:unit": {
      "dependsOn": ["^test:unit"],
      "inputs": ["**/__tests__/**", "**/*.test.*", "**/*.spec.*"]
    },
    "test:integration": {
      "dependsOn": ["^test:integration"],
      "inputs": ["**/integration/**", "**/*.test.*", "**/*.spec.*"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
